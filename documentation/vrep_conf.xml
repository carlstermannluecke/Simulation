<conf>
	<aircraft type = "simulation" name = "SimFinken">
		<signals>
			<signal name="throttle" default=50 min=0 max=100 type=float unit="percent"/>
			<signal name="pitch" default=0 min=-90 max=90 type=float unit="degree"/>
			<signal name="roll" default=0 min=-90 max=90 type=float unit="degree"-/>
			<signal name="yaw" default=0 min=-180 max=180 type=float unit="degree"/>
			<signal name="height" default=0 min=0 max=5 type=float unit="m"/>
			<signal name="sensor_dist" default=7.5 min=0 max=7.5 type=float[4] unit="m"/>
		</signals>
		<components>
			<sensors>
				<sensor name="SimFinken_sensor_front" type="distance_ultrasonic"/>	
				<sensor name="SimFinken_sensor_back" type="distance_ultrasonic"/>	
				<sensor name="SimFinken_sensor_left" type="distance_ultrasonic"/>	
				<sensor name="SimFinken_sensor_right" type="distance_ultrasonic"/>	
			</sensors>
		</components>
	</aircraft>
</conf>
