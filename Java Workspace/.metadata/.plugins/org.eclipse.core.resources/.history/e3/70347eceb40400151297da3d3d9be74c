package velinov.java.lut;


/**
 * @author vladimirvelinov
 * @since May 27, 2015
 */
public class SpineLookUpTable {
  
  private float[] angles;
  private long[]  angleCount;
  
  /**
   * @param _minAngle
   * @param _maxAngle
   * @param _offset
   */
  public SpineLookUpTable(int _minAngle, int _maxAngle, int _offset) {
    int tableSize;
    
    tableSize       = ((_maxAngle - _minAngle) / _offset) + 1;
    this.angles    = new float[tableSize];
    this.angleCount = new long[tableSize];
    
    for (int i = 0; i < tableSize; i ++) {
      this.angles[i] = _minAngle + (i * _offset);
    }
    
  }
}
