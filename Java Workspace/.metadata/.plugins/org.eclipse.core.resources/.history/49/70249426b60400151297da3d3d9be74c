package velinov.java.lut;


/**
 * @author vladimirvelinov
 * @since May 27, 2015
 */
public class SpineLookUpTable {
  
  private float[] angles;
  private long[]  anglesCount;
  
  private int     tableSize;
  private float   maxAngle;
  
  /**
   * @param _minAngle
   * @param _maxAngle
   * @param _offset
   */
  public SpineLookUpTable(int _minAngle, int _maxAngle, int _offset) {

    this.tableSize   = ((_maxAngle - _minAngle) / _offset) + 1;
    this.angles      = new float[this.tableSize];
    this.anglesCount = new long[this.tableSize];
    this.maxAngle    = _maxAngle;
    
    for (int i = 0; i < this.tableSize; i ++) {
      this.angles[i] = _minAngle + (i * _offset);
    }
    
  }
  
  public void setAngle(float _angle) {
    int index;
    
    index = (int) (_angle * (this.tableSize / this.maxAngle));
    
    this.anglesCount[index] ++;
  }
}
